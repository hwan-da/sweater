<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.sweater.model.dao.ReviewDao">

	<select id="selectAll" resultType="Review" parameterType="int">
		SELECT *
		FROM review
		WHERE board_id = #{boardId}
	</select>
	
	<insert id="insertReview" parameterType="Review">
		INSERT INTO review (board_id, title, writer, content)
		VALUES(#{boardId}, #{title}, #{writer}, #{content})
	</insert>
	
	<update id="modifyReview" parameterType="Review">
		UPDATE review
		SET content = #{content}
		WHERE review_id = #{reviewId}
	</update>
	
	<delete id="deleteReview" parameterType="int">
		DELETE
		FROM review
		WHERE review_id = #{reviewId}
	</delete>
	
</mapper>